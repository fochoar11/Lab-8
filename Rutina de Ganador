void verificarGanador(void)
{
    if (jugador1 == 4)
    {
        char mensaje[] = "Jugador 1 ha ganado\n";
        HAL_UART_Transmit(&huart2, (uint8_t*)mensaje, strlen(mensaje), HAL_MAX_DELAY);
        pausa = 1;
    }
    else if (jugador2 == 4)
    {
        char mensaje[] = "Jugador 2 ha ganado\n";
        HAL_UART_Transmit(&huart2, (uint8_t*)mensaje, strlen(mensaje), HAL_MAX_DELAY);
        pausa = 1;
    }
}
